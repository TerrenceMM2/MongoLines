<h1>Results</h1>

<div class="modal" id="article-count-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Success!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>{{count}} articles were added!</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="card-columns">
  {{#each data}}
  <div class="card">
    <img class="card-img-top" src={{photoUrl}}>
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      <p class="card-text">{{summary}}</p>
      <a href={{articleUrl}} class="btn btn-primary" target="_blank">Read</a>
    </div>
  </div>
  {{/each}}
</div>

<script>
  $(document).ready(function () {

    var images = $(".card-img-top");

    for (var i = 0; i < images.length; i++) {
      if (images[i].width === 72) {
        $(images[i]).addClass("card-img-top-mod");
      };
    };
  })
</script>