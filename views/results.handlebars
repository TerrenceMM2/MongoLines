<div class="jumbotron jumbotron-mod">
  <h1 class="display-4">MongoLines</h1>
  <p class="lead">Scrapping today's headlines in Mongo fashion</p>
  <hr class="my-4">
</div>

<div class="container">

  <div class="modal fade" id="article-count-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Success!</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>{{count}} articles were added!</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <div class="card-columns">
    {{#each data}}
    <div class="card">
      <img class="card-img-top" src={{photoUrl}}>
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{summary}}</p>
        <a href={{articleUrl}} class="btn btn-primary" target="_blank">Read</a>
        <button data-id="{{_id}}" class="delete-article btn btn-primary">Delete</a>
      </div>
    </div>
    {{/each}}
  </div>

</div>

<script>
  $(document).ready(function () {

    $("#article-count-modal").modal("show");

    var images = $(".card-img-top");

    for (var i = 0; i < images.length; i++) {
      if (images[i].width === 72) {
        $(images[i]).addClass("card-img-top-mod");
      };
    };

    $(".delete-article").on("click", function(){
      var id = $(this).attr("data-id");

      $.ajax({
        url: "/article/delete/" + id,
        method: "DELETE"
      }).then(function(response) {
        console.log(response);
      })
    })

  })
</script>